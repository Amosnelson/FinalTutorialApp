            style="@style/HeaderTextStyle"
            android:text="@string/num_question_2" />

        <TextView
            style="@style/QuestionText"
            android:text="@string/question_2" />

        <RadioGroup
            android:id="@+id/question_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <RadioButton
                android:id="@+id/answer2_2radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer1" />

            <RadioButton
                android:id="@+id/answer3_2radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer2" />

            <RadioButton
                android:id="@+id/answer4_2radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer3" />




        </RadioGroup>

        <!--Line-->
        <View style="@style/Line"></View>

        <!--Question 3-->
        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/num_question_3" />

        <TextView
            style="@style/QuestionText"
            android:text="@string/question_3" />

        <RadioGroup
            android:id="@+id/question_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/publ_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/publ" />

            <RadioButton
                android:id="@+id/sensitive_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/sensitive" />

            <RadioButton
                android:id="@+id/confidential_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/confidential" />

            <RadioButton
                android:id="@+id/private_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/_private" />


        </RadioGroup>

        <!--Line-->
        <View style="@style/Line"></View>

        <!--Question 4-->
        <TextView
