<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IntroFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/introduction"/>
        <include layout="@layout/introduction2"/>
        <include layout="@layout/introduction3"/>
        <include layout="@layout/introduction4"/>


        <TextView
            android:id="@+id/txtPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/slide_background"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:padding="16sp"
            android:text="Back"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="100dp"
            tools:ignore="RtlCompat" />



    </LinearLayout>


    </ScrollView>




</FrameLayout>